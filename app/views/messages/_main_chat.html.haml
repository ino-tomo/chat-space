.main-chat
  .main-chat__group-info
    .main-chat__group-info__left-box
      .main-chat__group-info__left-box__current-group
        = @group.name
      .main-chat__group-info__left-box__member-list
        Member:
        - @group.users.each do |user|
          = user.name

    .main-chat__group-info__edit-btn
      = link_to 'Edit', 'edit', class: 'btn'
  .main-chat__message-list
    = render @messages
  .main-chat__form
    = form_for [@group, @message], html: {class:"main-chat__form__box"} do |f|
      .main-chat__form__box
        = f.text_field :content, class: 'main-chat__form__box__text', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__form__box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'main-chat__form__box__image__file'
      = f.submit 'Send', class: 'main-chat__form__box__submit'
